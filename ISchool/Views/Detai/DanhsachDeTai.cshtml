@using ISchool.Models
@using PagedList.Mvc;
@model PagedList.PagedList<ISchool.Models.Detai>
@{
    ViewBag.Title = "Danh sách đề tài";
    Layout = "~/Views/Shared/MatrixAdmin/AdminLayout.cshtml";
}
<link href="~/Content/PagedList.css" rel="stylesheet" />

<div id="content-header">
    <div id="breadcrumb">
        <a href="@Url.Action("Dashbroad","Home")" title="Go to Home" class="tip-bottom">
            <i class="icon-home"></i>
            Home
        </a>
        <a href="#">
            Đề tài
        </a>
    </div>
</div>

<div class="container-fluid">
    <hr>
    <div>
        <a href="@Url.Action("Themmoi", "Detai")" class="btn btn-primary">
            Thêm mới
        </a>
        <input type="text" placeholder="Nhập thông tin cần tìm" style="margin-top: 11px;" />
        <a href="#" class="btn btn-primary" style="">
            <span><i class="icon-search"></i></span>
        </a>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"><i class="icon-th"></i></span>
                    <h5>Danh sách đề tài</h5>
                </div>
                <div class="widget-content nopadding">
                    @*@{ var i = 1;}*@
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                @*<th style="text-align:center;">STT</th>*@
                                <th>
                                    Tên đề tài
                                </th>
                                <th style="text-align:center;">
                                    Ngày hiệu lực
                                </th>
                                <th style="text-align:center;">
                                    Trạng thái
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @*<td style="text-align:center;">@(i++)</td>*@
                                    <td>
                                        <a href="@Url.Action("Chitiet","Detai", new { id = item.MADT })">
                                            @item.TENDT
                                        </a>
                                    </td>
                                    <td>
                                        @item.NGAYDTHIEULUC
                                    </td>
                                    <td>
                                        @item.TRANGTHAIDT
                                    </td>
                                    <td style="text-align:center;">
                                        <a href="@Url.Action("Chitiet","Detai", new {id =item.MADT })">
                                            <span class="icon-reorder"></span>
                                        </a>
                                        <a href="@Url.Action("Sua","Detai", new {id =item.MADT })">
                                            <span class="icon-edit"></span>
                                        </a>
                                        <a href="@Url.Action("Xoa","Detai", new { id = item.MADT})">
                                            <span class="icon-trash"></span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6"></td>
                            </tr>
                        </tfoot>
                    </table>
                    <div>
                        @Html.PagedListPager(Model, page => Url.Action("DanhsachGiangvien",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>