@model ISchool.Models.Detai

@{
    ViewBag.Title = "Sửa";
    Layout = "~/Views/Shared/MatrixAdmin/AdminLayout.cshtml";
}

<script src="~/tinymce/tinymce.min.js"></script>
<script>tinymce.init({ selector: 'textarea' });</script>


<div id="content-header">
    <div id="breadcrumb">
        <div id="breadcrumb">
            <a href="@Url.Action("Dashbroad","Home")" title="Go to Home" class="tip-bottom">
                <i class="icon-home"></i>
                Home
            </a>
            <a href="@Url.Action("DanhsachDetai","Detai")">
                Đề tài
            </a>
            <a href="#" class="current">
                Thêm mới
            </a>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        <hr>
        <div class="row-fluid">
            <div class="span6">
                <div class="widget-content nopadding">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2">Tên đề tài</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TENDT, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TENDT, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Mô tả đề tài</label>
                        <div class="col-md-10">
                            <textarea name="MOTADT">Mô tả đề tài</textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Người đề nghị đề tài</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NGUOIDENGHIDT, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NGUOIDENGHIDT, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Trạng thái đề tài</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TRANGTHAIDT, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TRANGTHAIDT, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Ngày hiệu lực</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NGAYDTHIEULUC, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NGAYDTHIEULUC, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Chọn loại đề tài</label>
                        <div class="col-md-10">
                            @Html.DropDownList("MALDT", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MALDT, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" value="Create" class="btn btn-success">Lưu</button>
                            <a href="@Url.Action("DanhsachDetai", "Detai")" class="btn btn-primary">Trở về</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
