@using ISchool.Models
@using PagedList.Mvc;
@model PagedList.PagedList<ISchool.Models.Giangvien>

@{
    ViewBag.Title = "Danh sách giảng viên";
    Layout = "~/Views/Shared/MatrixAdmin/AdminLayout.cshtml";
}
<link href="~/Content/PagedList.css" rel="stylesheet" />
<div id="content-header">
    <div id="breadcrumb">
        <a href="@Url.Action("Dashbroad","Home")" title="Go to Home" class="tip-bottom">
            <i class="icon-home"></i>
            Home
        </a>
        <a href="#" class="current">
            Giảng viên
        </a>
    </div>
</div>
<div class="container-fluid">
    <hr>
    <div>
        <a href="@Url.Action("Themmoi", "Giangvien")" class="btn btn-primary">
            Thêm mới
        </a>
        <input type="text" placeholder="Nhập thông tin cần tìm" style="margin-top: 11px;" />
        <a href="#" class="btn btn-primary" style="">
            <span><i class="icon-search"></i></span>
        </a>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"><i class="icon-th"></i></span>
                    <h5>Danh sách sinh viên</h5>
                </div>
                <div class="widget-content nopadding">
                    @*@{ var i = 1;}*@
                    <table class="table table-striped table-bordered table-style" style="border:1px solid #ddd;">
                        <thead>
                            <tr style="background:#eee;">
                                @*<th>STT</th>*@
                                <th style="text-align:center;">Mã GV</th>
                                <th style="text-align:center;">Họ và Tên</th>
                                <th style="text-align:center;">Địa Chỉ</th>
                                <th style="text-align:center;">Ngày Sinh</th>
                                <th style="text-align:center;">Email</th>
                                @*<th style="width: 80px;" class="text-center">
                                        Giới Tính
                                    </th>*@
                                <th style="width:100px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @*<td style="text-align:center;">
                                        @(i++)
                                    </td>*@
                                    <td style="text-align:center; color:#2575e5">
                                        <a href="@Url.Action("Chitiet","Giangvien", new {id =item.MAGV })" style="color:#2575e5;">
                                            @item.MAGV
                                        </a>
                                    </td>
                                    <td style="text-transform: uppercase">
                                        <div class="pull-left" style="width:50px;height:50px;display:table">
                                            <img style="display:table-cell;width:50px;height:50px;border-radius:50%;border:1px solid #ddd;" src="~/Hinhanh/@item.ANHDAIDIEN" alt="" />
                                        </div>
                                        <div class="pull-right" style="width:calc(100% - 77px);height:50px;overflow:hidden;display:table;">
                                            <span style="display:table-cell;height:50px;vertical-align:middle;">
                                                <a class="fix-title-2-row" title="Xem họ tên giảng viên">
                                                    @item.HOGV @item.TENGV
                                                </a><br />
                                            </span>
                                        </div>
                                    </td>
                                    <td style="text-align:center;">@item.DIACHI</td>
                                    <td style="text-align:center;">@item.NGAYSINH</td>
                                    <td style="text-align:center;">@item.EMAIL</td>
                                    <td style="text-align:center;">
                                        <a href="@Url.Action("Chitiet","Giangvien", new {id =item.MAGV })">
                                            <span class="icon-reorder"></span>
                                        </a>
                                        <a href="@Url.Action("Sua","Giangvien", new {id =item.MAGV })">
                                            <span class="icon-edit"></span>
                                        </a>
                                        <a href="@Url.Action("Xoa","Giangvien", new { id = item.MAGV})">
                                            <span class="icon-trash"></span>
                                        </a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="9"></td>
                            </tr>
                        </tfoot>
                    </table>
                    <div>
                        @Html.PagedListPager(Model, page => Url.Action("DanhsachGiangvien",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
